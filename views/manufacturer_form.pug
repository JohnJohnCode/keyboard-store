extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Name of manufacturer:
      input#name.form-control(type='text', placeholder='Dell, Logitech etc.' name='name' value=(undefined===manufacturer ? '' : manufacturer.name))
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea', placeholder='Description' name='description' required='true') #{undefined===manufacturer ? '' : manufacturer.description}
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
