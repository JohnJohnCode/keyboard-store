extends layout

block content
  h1 #{title}: #{category.name}
  p= category.description

  if category_keyboards.length

    p #[strong Delete the following keyboards before attempting to delete this category.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Keyboards

      dl
      each keyboard in category_keyboards
        dt
          a(href=keyboard.url) #{keyboard.name}
        dd #{keyboard.description}

  else
    p Do you really want to delete this category?

    form(method='POST' action='')
      div.form-group
        input#categoryid.form-control(type='hidden',name='categoryid', required='true', value=category._id )

      button.btn.btn-primary(type='submit') Delete
